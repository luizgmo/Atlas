@{
    ViewData["Title"] = "Fotos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-danger border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Fotos</h5>
                    <h6 class="text-white text-capitalize ps-3">Listagem</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <a class="btn btn-secondary" asp-action="Create">Adicionar Novo</a>
                <div class="table-responsive">
                    <table id="tblData" class="table table-striped align-items-center mb-0" style="width:100%">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xs font-weight-bolder">
                                    Nome
                                </th>
                                <th class="text-uppercase text-secondary text-xs font-weight-bolder">
                                    Ações
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/js/delete.js"></script>
    <script src="~/assets/js/photo.js"></script>
}
