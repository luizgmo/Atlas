@model AtlasP.Models.Value
@{
    ViewData["Title"] = "Valores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-danger border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Valores</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="px-4 py-1">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-8">
                            <div class="row my-1">
                                <div class="col-8">
                                    <div class="input-group input-group-static">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" disabled />
                                        <span asp-validation-for="Name" class="text-danger col-12 text-xs pt-1"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-4">
                                    <div class="input-group input-group-static">
                                        <label asp-for="Price"></label>
                                        <input asp-for="Price" class="form-control" disabled />
                                        <span asp-validation-for="Price" class="text-danger col-12 text-xs pt-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group pt-2">
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>